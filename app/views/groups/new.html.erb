<h1 class="mb-4">Create A New User</h1>

<%= form_tag groups_path, method: :post, class: 'needs-validation', novalidate: true do %>
  <%= fields_for :group do |form| %>

    <div class="form-group">
      <%= form.label :name, "Group Name:", class: 'form-label' %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :description, "Group Description:", class: 'form-label' %>
      <%= form.text_field :description, class: 'form-control' %>
    </div>

    <div class="text-center">
      <%= submit_tag "Create Group", class: 'btn btn' %>
    </div>
  <% end %>
<% end %>

<style>
    .form-label {
        font-weight: bold;
    }
    .form-control {
        margin-bottom: 10px;
    }
    .text-center {
        margin-top: 20px;
    }
</style>
